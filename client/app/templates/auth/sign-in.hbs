<strong>{{view.name}}</strong>
Email: {{view Ember.TextField valueBinding=view.email}}
<br/>
Password: {{ view Ember.TextField type='password' valueBinding=view.password }}
<br/>
<button class="btn btn-primary" data-action="login">Войти</button>

<div class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Enter your username (email) and password, please</h3>
    </div>
    <div class="modal-body">
        <p>Sign in form here</p>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn">Close</a>
        <a href="#" class="btn btn-primary">Sign in</a>
    </div>
</div>
