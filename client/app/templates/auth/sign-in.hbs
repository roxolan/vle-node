<div {{bindAttr class=":modal view.hidden:hide view.hidden:fade"}}>
  <div class="modal-header">
    <button type="button" class="close" data-action="close" aria-hidden="true">&times;</button>
    <h3>Login</h3>
  </div>
  <div class="modal-body">
    <form class="form-horizontal">
      <legend>Enter your username (email) and password, please</legend>
      <div class="control-group">
        <label class="control-label">Email</label>
        <div class="controls">
          {{view Ember.TextField valueBinding=view.email}}
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Password</label>
        <div class="controls">
          {{ view Ember.TextField type='password' valueBinding=view.password }}
        </div>
      </div>
    </form>
  </div>
  <div class="modal-alerts"></div>
  <div class="modal-footer">
    <a data-action="close" href="#" class="btn">Close</a>
    <a data-action="login" href="#" class="btn btn-primary">Sign in</a>
  </div>
</div>
<div {{bindAttr class=":modal-backdrop view.hidden:hide"}}>

</div>
<div class="alert hide">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Warning!</strong> Enter your username and password, please
</div>


