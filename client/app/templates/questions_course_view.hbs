{{#each questions itemController="question"}}
  {{#view contentBinding="this"}}
    <li>
      <a>
        <section class="answer">
          <header>
            {{body}}
          </header>
          <footer>
            <div class="tags">
              <span {{bindAttr class=":label answersLength:label-success"}}>
                <span>{{answersLength}}</span> Answer(s)
              </span>
              {{#if lecture}}
                <span class="label">Lecture {{lecture.number}}</span>
              {{/if}}
            </div>
            <span class="author">{{authorName}} asked it.</span>
          </footer>
        </section>
      </a>
    </li>
  {{/view}}
{{/each}}
