
<div class="lecture-box height100">
  <div class="lecture-left height100">

    <div class="row-fluid height100">
      <div class="span8 height100">
        <section class="lecture-view height100">
          <header>
            <div>{{#linkTo course.index class="back-button btn btn-success"}}<i class="icon-arrow-left"></i><span>Back to course</span>{{/linkTo}}</div>
            <div class="title">
              <div class="section">Section {{section.number}}<span class="lecture">Lecture</span><div class="lecture-number">{{number}}</div></div>
              <h3>{{title}}</h3>
              <h2>Course:{{controllers.course.title}}</h2>
            </div>
          </header>
          <div class="content-body lecture-content">
            {{&lectureContent}}
          </div>
          <footer>
            <div class="row-fluid">
              <div class="span8">
                <button class="btn btn-success" {{action nextLectureTransition}}>Next lecture <i class="icon-arrow-right"></i></button>
                {{resetPrevNext}}
                {{#if nextLecture}}
                  {{#linkTo lecture.index nextLecture class="btn"}}Next{{/linkTo}}
                {{/if}}
                {{#if prevLecture}}
                  {{#linkTo lecture.index prevLecture class="btn"}}Prev{{/linkTo}}
                {{/if}}
              </div>
              <div class="span4">
                <button {{bindAttr class=":btn :btn-small isCompleted:btn-warning:btn-success"}} {{action completeLecture}}>
                  {{#if isCompleted}}
                    Mark as uncompleted <i class="icon-refresh"></i>
                  {{else}}
                    Mark as completed <i class="icon-check"></i>
                  {{/if}}
                </button>
              </div>
            </div>
          </footer>
        </section>
      </div>
      <div class="span4 height100">
        <div class="lecture-info-wrapper height100">
          <div class="lecture-info">
            <div class="btn-group">
              <div {{bindAttr class=":btn isDescription:active:"}} {{action showDescription}}>
                <i class="icon-info-sign"></i>
                Description
              </div>
              <div {{bindAttr class=":btn isQuestions:active:"}} {{action showQuestions}}>
                <i class="icon-question-sign"></i>
                Questions
              </div>
              <div {{bindAttr class=":btn isNotes:active:"}} {{action showNotes}}>
                <i class="icon-list"></i>
                Notes
              </div>
            </div>
            <div {{bindAttr class=":lecture-info-content toView"}}>
              <div class="tab1">
                {{description}}
              </div>
              <div class="tab2">
                {{view App.QuestionsCourseView}}
              </div>
              <div class="tab3">
                {{view App.LectureNotesView}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>



  </div>
</div>

