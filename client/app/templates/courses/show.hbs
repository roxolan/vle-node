<section class="panel course-info">
  <header>
    <div class="thumb" {{bindAttr style="mainTumb"}}>

    </div>
    <h2>{{title}}</h2>
    <p>
      {{description}}
    </p>
  </header>
</section>

<div class="row-fluid">
  <div class="span8">
    <section class="panel course-progress">
      <div class="content-body">
        You have completed 7 of 30 items in this course
        <div class="progress">
          <div class="bar" style="width: 60%"></div>
        </div>
        <a class="btn btn-success">Continue with Lecture: {{nextLecture}}</a>
      </div>
    </section>
    <section class="panel curriculum">
      <header>
        Curriculum
      </header>
      <div class="content-body">
        {{#each sections}}
          {{view App.SectionAnonsView contentBinding="this"}}
        {{/each}}
      </div>
    </section>
  </div>
  <div class="span4">
    <section class="panel ratecourse">
      <header>
        <span>Rate this course</span>
        <span class="course-rating-control">
          {{view App.RaterView ratingBinding=myRating}}
        </span>
      </header>
    </section>
    <section class="panel announcements">
      <header>Announcements</header>
      <div class="announcements-buttons">
        <ul class="unstyled">
          <li>
            <div class="btn-announce">
              <div class="title">Dear students, all my courses are off 50% for next 2 days.</div>
              <div class="how-long icon-time">10 hours ago</div>
              <div class="clearfix"></div>
            </div>
          </li>
          <li>
            <div class="btn-announce">
              <div class="title">Dear students, all my courses are off 50% for next 2 days.</div>
              <div class="how-long icon-time">2 days ago</div>
              <div class="clearfix"></div>
            </div>
          </li>
          <li>
            <div class="btn-announce">
              <div class="title">Dear students, all my courses are off 50% for next 2 days.</div>
              <div class="how-long icon-time">5 days ago</div>
              <div class="clearfix"></div>
            </div>
          </li>
        </ul>
      </div>
    </section>
    <section class="panel questions">
      <header>Questions</header>
      <div class="question-input-panel">
        <form class="form-horizontal">
          <div class="control-group">
            <input type="text" class="question-input">
          </div>
          <div class="control-group">
            <button type="submit" class="btn">Ask</button>
          </div>
        </form>
      </div>
      <div class="content-body">
        {{view App.QuestionsCourseView}}
      </div>
    </section>
  </div>
</div>


